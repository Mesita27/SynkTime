# SynkTime Biometric Services Environment Configuration
# Copy this file to .env and adjust values as needed

# Biometric API URLs
FACE_API_BASE=http://localhost:18081
FINGER_API_BASE=http://localhost:18082

# API Configuration
FACE_MATCH_THRESHOLD=0.42
FINGER_MATCH_THRESHOLD=40

# Docker Configuration
COMPOSE_PROJECT_NAME=synktime-biometric

# InsightFace Configuration
INSIGHTFACE_PORT=18081
INSIGHTFACE_CPU_ONLY=1
INSIGHTFACE_MAX_SIZE=1280
INSIGHTFACE_DET_SIZE=640

# SourceAFIS Configuration  
SOURCEAFIS_PORT=18082
SOURCEAFIS_MEMORY=512m

# Redis Configuration (optional)
REDIS_PORT=6379
REDIS_MEMORY=256mb

# Nginx Proxy Configuration (optional)
NGINX_PORT=8080

# Security
ENABLE_AUTH=false
API_KEY=your-secret-api-key-here

# Performance Tuning
MAX_CONCURRENT_REQUESTS=10
REQUEST_TIMEOUT=30
WORKER_PROCESSES=2

# Logging
LOG_LEVEL=INFO
ENABLE_DEBUG_LOGS=false

# File Upload Limits
MAX_IMAGE_SIZE=5MB
ALLOWED_IMAGE_TYPES=jpeg,png,webp

# Database (if using external cache)
REDIS_URL=redis://localhost:6379/0

# Monitoring (optional)
ENABLE_METRICS=false
METRICS_PORT=9090